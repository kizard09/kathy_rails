<p id="notice"><%= notice %></p>

<h1>Listing Speaking Users</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Email</th>
      <th>Event</th>
      <th>Message</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @speaking_users.each do |speaking_user| %>
      <tr>
        <td><%= speaking_user.first_name %></td>
        <td><%= speaking_user.last_name %></td>
        <td><%= speaking_user.email %></td>
        <td><%= speaking_user.event %></td>
        <td><%= speaking_user.message %></td>
        <td><%= link_to 'Show', speaking_user %></td>
        <td><%= link_to 'Edit', edit_speaking_user_path(speaking_user) %></td>
        <td><%= link_to 'Destroy', speaking_user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

